<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    android:padding="16dp">

    <!-- Outer White Rounded Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="648dp"
        android:background="@drawable/bg_white_rounded"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="EVERMED"
            android:textColor="#E754C9"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Inner Pink Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_form_container"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Disease Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Disease Name"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_input"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Description"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_input"
                android:gravity="top"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Current Doctor -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Current Doctor"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_input"
                android:hint="Optional"
                android:padding="12dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_cancel_button"
                    android:text="Cancel"
                    android:textColor="#000000" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_save_button"
                    android:text="Save Category"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="16dp"
            android:src="@drawable/home"
            app:tint="#FFFFFF"
            android:contentDescription="Home" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="16dp"
            android:src="@drawable/records"
            app:tint="#FFFFFF"
            android:contentDescription="Records" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="16dp"
            android:src="@drawable/user"
            app:tint="#FFFFFF"
            android:contentDescription="Profile" />
    </LinearLayout>
</LinearLayout>
